<div class="container brown menu_margin">
	<div class="menu_margin">
		<div class="center">
			<h2>Game ID: <%= @game.id %></h2>
		</div>
		 
		<p>
			Question Count: <%= @game.question_count %>
		</p>

		<p>
			Types:
			<% @game.types.each do |type| %>
				<%= type.name %> /
			<% end %>
		</p>

		<p>
			Sources:
			<% @game.sources.each do |source| %>
				<%= source.name %> /
			<% end %>
		</p>

		<hr>

		<% @questionArray = @game.GetQuestionSet.to_a() %>
		<% if @questionArray != [] %>
			<% @question = @questionArray.sample %>
			<%= render 'questions/show' %>
		<% else %>
			Not enough questions in the database meet this game's criteria.
		<% end %>

	</div>
</div>
