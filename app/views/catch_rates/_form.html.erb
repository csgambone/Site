<%= form_for(@catch_rate) do |f| %>
  <% if @catch_rate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@catch_rate.errors.count, "error") %> prohibited this catch_rate from being saved:</h2>

      <ul>
      <% @catch_rate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
