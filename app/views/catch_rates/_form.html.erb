      <p>
        <h5> Current HP </h5>
        <%= f.number_field :currenthp, :size => 800 %>
      </p>

      <p>
        <h5> Maximum HP </h5>
        <%= f.number_field :maxhp, :size => 800 %>
      </p>

      <p>
        <h5> Status Multiplier </h5>
        <%= f.number_field :status, :size => 800 %>
      </p>

      <p>
        <h5> Ball Multiplier </h5>
        <%= f.number_field :ball, :size => 800 %>
      </p>

      <p>
        <h5> O-Power Multiplier </h5>
        <%= f.number_field :opower, :size => 800 %>
      </p>

       <p>
        <h5> Number of Pokemon caught in Pokedex </h5>
        <%= f.number_field :caught, :size => 800 %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    </div>
  </div>
<% end %>
