<h1>Listing articles</h1>
  <div class="container">
  <%= link_to 'New Article', new_article_path, :class=>"button one column" %>
</div>
<div class="container brown">
  <div class="sixteen columns">
    <div class="three columns">
      <h3>Title</h3>
    </div>
    <div class="nine columns">
      <h3>Text</h3>
    </div>
    <div class="three columns">
      <h3>Buttons</h3>
    </div>
  </div>
 
  <% @articles.each do |article| %>
    <div class="sixteen columns">
      <div class="three columns">
        <%= article.title %>
      </div>
      <div class="nine columns">
        <%= article.text %>
      </div>
      <div class="one column">
        <%= link_to 'Show', article_path(article), :class=>"button" %>
      </div>
      <div class="one column">
        <%= link_to 'Edit', edit_article_path(article), :class=>"button" %>
      </div>
      <div class="one column">
        <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"button" %>
      </div>
    </div>
    &nbsp;
  <% end %>
</div>
