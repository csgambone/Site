<h1>Listing Questions</h1>
  <div class="container">
  <%= link_to 'New Question', new_question_path, :class=>"button one column" %>
</div>
<div class="container brown">
  <% @questions.each do |question| %>
    <div class="sixteen columns">
      <div class="three columns">
        Question: <%= question.body %>
      </div>
      <div class="nine columns">
        Answer: <%= question.answer %>
      </div>
      <div class="one column">
        <%= link_to 'Show', question_path(question), :class=>"button" %>
      </div>
      <div class="one column">
        <%= link_to 'Edit', edit_question_path(question), :class=>"button" %>
      </div>
      <div class="one column">
        <%= link_to 'Destroy', question_path(question), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"button" %>
      </div>
    </div>
    <div class="sixteen columns">
      <div class="three columns">
        Option 1: <%= question.option1 %>
      </div>
      <div class="three columns">
        Option 2: <%= question.option2 %>
      </div>
      <div class="three columns">
        Option 3: <%= question.option3 %>
      </div>
      <div class="three columns">
        Option 4: <%= question.option4 %>
      </div>
      <div class="three columns">
        Option 5: <%= question.option5 %>
      </div>
    </div>
    <hr/>
    &nbsp;
  <% end %>
</div>
